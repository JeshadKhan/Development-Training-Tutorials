@{
    Page.Title = "Title goes here";
    //Layout = "Your Layout Page goes here";
}

<div>
    <h1><a href="~/Archive/Post/@Model.Slug">@Model.Title</a> @*<small>by @Model.UserName</small>*@</h1>
    @*<p>@Html.Raw(md.Transform(Model.Content))</p>*@
    <p>@Model.Content</p>

    <div>
        <p>
            Tags:
            @for (int i = 0; i < Model.Tags.Count; i++)
            {
                <a href="~/Archive/Tag/@Model.Tags[i].UrlFriendlyName">@Model.Tags[i].Name</a>

                if ((Model.Tags.Count - 1) == i)
                {
                    <span>.</span>
                }
                else
                {
                    <span>, </span>
                }
            }
        </p>
    </div>
</div>